<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.cc_calc.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="@string/enter_your_number"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="24sp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="3"
            android:rowCount="1">

            <Spinner
                android:id="@+id/startCC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="30dp"
                android:layout_row="0">
            </Spinner>
            <TextView
                android:text="=>"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:textSize="22sp"
                />

            <Spinner
                android:id="@+id/endCC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginBottom="8dp"
                android:layout_row="0">
            </Spinner>
        </GridLayout>

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/result"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="24sp"/>
        </LinearLayout>

    <GridLayout
        android:id="@+id/tableButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4"
        android:columnOrderPreserved="false"
        android:rowOrderPreserved="false">

            <Button
                android:id="@+id/numberButton_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:text="0"
                android:textSize="33sp"
                android:enabled="false"/>

            <Button
                android:id="@+id/numberButton_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:text="1"
                android:textSize="33sp"
                android:enabled="false"/>
            <Button
                android:id="@+id/numberButton_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:text="2"
                android:textSize="33sp"
                android:enabled="false"/>

            <Button
                android:id="@+id/numberButton_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="2"
                android:text="3"
                android:textSize="33sp"
                android:enabled="false"/>

            <Button
                android:id="@+id/numberButton_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="4"
                android:textSize="33sp"
                android:enabled="false"/>

            <Button
                android:id="@+id/numberButton_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:text="5"
                android:textSize="33sp"
                android:enabled="false"/>

            <Button
                android:id="@+id/numberButton_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="1"
                android:text="6"
                android:textSize="33sp"
                android:enabled="false"/>

            <Button
                android:id="@+id/numberButton_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:text="7"
                android:textSize="33sp"
                android:enabled="false"/>

            <Button
                android:id="@+id/numberButton_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:text="8"
                android:textSize="33sp"
                android:enabled="false"/>

            <Button
                android:id="@+id/numberButton_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="0"
                android:text="9"
                android:textSize="33sp"
                android:enabled="false"/>

            <Button
                android:id="@+id/numberButton_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:text="A"
                android:textSize="33sp"
                android:enabled="false"/>

            <Button
                android:id="@+id/numberButton_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="3"
                android:text="B"
                android:textSize="33sp"
                android:enabled="false"/>

            <Button
                android:id="@+id/numberButton_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="0"
                android:text="C"
                android:textSize="33sp"
                android:enabled="false"/>

            <Button
                android:id="@+id/numberButton_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="1"
                android:text="D"
                android:textSize="33sp"
                android:enabled="false"/>

            <Button
                android:id="@+id/numberButton_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="2"
                android:text="E"
                android:textSize="33sp"
                android:enabled="false"/>
            <Button
                android:id="@+id/numberButton_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="3"
                android:text="F"
                android:textSize="33sp"
                android:enabled="false"/>
    </GridLayout>
    <Button
        android:layout_gravity="end"
        android:id="@+id/resultButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="33sp"/>
    <Button
        android:layout_gravity="end"
        android:id="@+id/clearButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:textSize="33sp"/>
</LinearLayout>
